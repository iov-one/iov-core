{
  "name": "@iov/playground",
  "version": "0.0.0",
  "description": "Playground for trying out functional typescript",
  "author": "ethanfrey <ethanfrey@users.noreply.github.com>",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/iov-one/web4/tree/master/packages/playground"
  },
  "scripts": {
    "build": "yarn format && yarn lint && yarn transpile",
    "format": "prettier --write src/**/*.ts",
    "lint": "tslint --project .",
    "lint-fix": "yarn lint --fix",
    "test": "jest",
    "transpile": "tsc",
    "pbts": "node ../../node_modules/protobufjs/cli/bin/pbts",
    "pbjs": "node ../../node_modules/protobufjs/cli/bin/pbjs",
    "findProto": "find $GOPATH/src/github.com/confio/weave/crypto -name '*.proto' -not -path '*/vendor/*'",
    "packProto": "yarn pbjs -t static-module -w commonjs -o src/types/proto.js `yarn -s findProto` && yarn pbts -o src/types/proto.d.ts src/types/proto.js"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/node": "^9.6.6",
    "jest": "^22.4.3",
    "prettier": "1.12.1",
    "ts-jest": "^22.4.4",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.12.0",
    "tslint-immutable": "^4.5.4",
    "typescript": "^2.8.3"
  },
  "dependencies": {
    "js-nacl": "^1.2.2",
    "protobufjs": "^6.8.6"
  },
  "baseUrl": "types",
  "typeRoots": ["src/types"]
}
